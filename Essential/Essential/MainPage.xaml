<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Essential.MainPage">

    <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="20">
        <Label x:Name="display" Text="{Binding Source={x:Reference slider }, Path=Value}"/>
        <Slider WidthRequest="200" x:Name="slider" />
    </StackLayout>

</ContentPage>
